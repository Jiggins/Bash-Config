# Set C-a as Prefix key
set -g prefix C-a
bind C-a send-prefix

# Start Window Numbering at 1
set -g base-index 1

# Resize screen to max if no other user is currently on that pane
setw -g aggressive-resize on

# Zero delay after pressing Escape
set -s escape-time 0

# Solves rendering issues with Vim inside tmux
set -g default-terminal "screen-256color"

# Tmux Powerline
run-shell "powerline-daemon -q"
# run-shell ". ${HOME}/.vim/bundle/powerline/powerline/bindings/bash/powerline.sh"
source "${HOME}/.vim/bundle/powerline/powerline/bindings/tmux/powerline.conf"

# Vi mode in tmux
# http://blog.sanctum.geek.nz/vi-mode-in-tmux/
set-window-option -g mode-keys vi

bind-key -t vi-copy 'v' begin-selection
bind-key -t vi-copy 'y' copy-selection

# Smart pane switching with awareness of vim splits
is_vim='echo "#{pane_current_command}" | grep -iqE "(^|\/)g?(view|n?vim?)(diff)?$"'
bind C-h        if-shell "$is_vim" "send-keys C-h" "select-pane -L"
bind C-j        if-shell "$is_vim" "send-keys C-j" "select-pane -D"
bind C-k        if-shell "$is_vim" "send-keys C-k" "select-pane -U"
bind C-l        if-shell "$is_vim" "send-keys C-l" "select-pane -R"

bind -n C-left  if-shell "$is_vim" "send-keys C-h" "select-pane -L"
bind -n C-down  if-shell "$is_vim" "send-keys C-j" "select-pane -D"
bind -n C-up    if-shell "$is_vim" "send-keys C-k" "select-pane -U"
bind -n C-right if-shell "$is_vim" "send-keys C-l" "select-pane -R"
bind -n C-\     if-shell "$is_vim" "send-keys C-\\" "select-pane -l"

bind -n M-left  if-shell "$is_vim" "send-keys C-h" "select-pane -L"
bind -n M-down  if-shell "$is_vim" "send-keys C-j" "select-pane -D"
bind -n M-up    if-shell "$is_vim" "send-keys C-k" "select-pane -U"
bind -n M-right if-shell "$is_vim" "send-keys C-l" "select-pane -R"

